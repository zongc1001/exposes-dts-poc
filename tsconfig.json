{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": ".",
    "noEmit": true,
    "noEmitOnError": false,
    "declaration": true,
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
    ],
    "types": [
      "node",
    ],
    "paths": {
      "@monospace/openapp": ["packages/openapp"],
      "@monospace/openapp/*": ["packages/openapp/*"],
      "@monospace/*": ["packages/*"],
    },
  },
  "include": [
    "packages",
    "expose",
  ],
}
